@page  "/categorias"
@using MetalCoin.Web.Spa.Core.Endpoint;
@using MetalCoin.Web.Spa.Core.Models;

<h3>Categorias</h3>

<div class="row mb-4">
    <div class="col-12 text-end">
        <a href="categorias/0" class="btn btn-primary"><i class="ri-add-line"></i> Cadastrar</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table">
            <thead>
            <tr>
                <th>#Id</th>
                <th>Nome</th>
                <th>Status</th>
                <th>Criado</th>
                <th>Alterado</th>
                <th>Ações</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in _categoriasLista)
                {
                    <tr>
                        <th>@item.Id</th>
                        <td>@item.Nome</td>
                        <td>@item.Status</td>
                        <td>@item.Criado</td>
                        <td>@item.Alterado</td>
                        <td>
                            <a href="categorias/@item.Id" class="btn"><i class="ri-edit-line"></i></a>
                            <a class="btn text-danger"><i class="ri-delete-bin-line"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    [Inject] ICategoriaEndpoint? CategoriaEndpoints {get; set; }
    private List<CategoriaResponse> _categoriasLista = new();

    protected override async Task OnInitializedAsync()
    {
        _categoriasLista = await CategoriaEndpoints.ObterTodos();
    }
}
